{
  "name": "meme-arena",
  "version": "1.0.0",
  "description": "Meme ranking system based on group preferences",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "sync:memes": "ts-node --project tsconfig.scripts.json scripts/sync-memes.ts",
    "reset:db": "ts-node --project tsconfig.scripts.json scripts/reset-db.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "next": "15.4.7",
    "next-themes": "^0.4.3",
    "pg": "^8.16.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
